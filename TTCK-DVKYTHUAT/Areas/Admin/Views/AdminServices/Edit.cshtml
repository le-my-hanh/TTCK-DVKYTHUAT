@model TTCK_DVKYTHUAT.Models.Service

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<!-- Bottom Breadcrumb card start -->
<div class="card">
    <div class="card-block">
        <div class="breadcrumb-header">
            <h5>Quản Lý Dịch Vụ</h5>
        </div>
        <div>
            <ul class="breadcrumb-title">
                <li class="breadcrumb-item">
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                        <i class="icofont icofont-home"></i>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-area="Admin" asp-controller="AdminServices" asp-action="Index">Danh Sách Dịch Vụ</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-area="Admin" asp-controller="AdminServices" asp-action="Edit">Chỉnh sửa Dịch Vụ</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- Bottom Breadcrumb card end -->
<!-- Basic Form Inputs card start -->
<div class="card">
    <div class="card-header">

        <div class="card-header-right">
            <i class="icofont icofont-spinner-alt-5"></i>
        </div>

        <div class="card-header-right">
            <i class="icofont icofont-spinner-alt-5"></i>
        </div>

    </div>
    <div class="card-block">

        <form asp-controller="AdminServices" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="ServiceId" />
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label">Tên Dịch Vụ</label>
                <div class="col-sm-10">
                    <input asp-for="Name" type="text" class="form-control" placeholder="Nhập tên...">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Price" class="col-sm-2 col-form-label">Phí Dịch Vụ</label>
                <div class="col-sm-10">
                    <input asp-for="Price" type="text" class="form-control"
                           placeholder="Nhập phí dịch vụ....">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Quantity" class="col-sm-2 col-form-label">Số Lượng</label>
                <div class="col-sm-10">
                    <input asp-for="Quantity" type="text" class="form-control"
                           placeholder="Số lượng">
                </div>
            </div>



            <div class="form-group row">
                <label asp-for="CategoryId" class="col-sm-2 col-form-label">Danh Mục</label>
                <div class="col-sm-10">
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>


                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Upload File</label>
                <div class="col-sm-10">
                    <img src="~/images/@Model.Image" style="width: 100px; height: 100px;" />
                    <input type="file" class="form-control" Name="file">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-label">Mô tả Dich vụ</label>
                <div class="col-sm-10">
                    <textarea asp-for="Description" rows="5" cols="5" class="form-control"
                              placeholder="mô tả..."></textarea>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-warning"   />
                <a asp-action="Index" class="btn btn-inverse" asp-controller="AdminServices" asp-route-id="@Model?.ServiceId"> Back Home</a>
            </div>
        </form>

    </div>
</div>
<!-- Basic Form Inputs card end -->
