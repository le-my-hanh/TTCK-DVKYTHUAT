@model TTCK_DVKYTHUAT.Models.News

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Bottom Breadcrumb card start -->
<div class="card">
    <div class="card-block">
        <div class="breadcrumb-header">
            <h5>Quản Lý Tin Tức</h5>
        </div>
        <div>
            <ul class="breadcrumb-title">
                <li class="breadcrumb-item">
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                        <i class="icofont icofont-home"></i>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-area="Admin" asp-controller="AdminNews" asp-action="Index">Danh Sách Tin Tức</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#!">Chỉnh sửa tin tức</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- Bottom Breadcrumb card end -->
<!-- Basic Form Inputs card start -->
<div class="card">
    <div class="card-header">

        <div class="card-header-right">
            <i class="icofont icofont-spinner-alt-5"></i>
        </div>

        <div class="card-header-right">
            <i class="icofont icofont-spinner-alt-5"></i>
        </div>

    </div>
    <div class="card-block">

        <form asp-controller="AdminNews" asp-action="Edit" method="post" enctype="multipart/form-data" asp-route-id="@Model.NewsId">
            <input type="hidden" asp-for="NewsId" />
            <div class="form-group row">
                <label asp-for="Title" class="col-sm-2 col-form-label">Tên tiêu đề</label>
                <div class="col-sm-10">
                    <input asp-for="Title" type="text" class="form-control" placeholder="Tiêu đề...">
                </div>
            </div>




            <div class="form-group row">
                <label asp-for="CategorynewId" class="col-sm-2 col-form-label">Danh Mục</label>
                <div class="col-sm-10">
                    <select asp-for="CategorynewId" class="form-control" asp-items="ViewBag.CategorynewId"></select>


                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Hình Ảnh</label>
                <div class="col-sm-10">
                    <img src="~/images/@Model.Image" style="width: 100px; height: 100px;" />
                    <input asp-for="@Model.Image" type="file" class="form-control" Name="file">
                    <input type="hidden" asp-for="@Model.Image" value="@Model.Image" name="Image"/>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Desciption" class="col-sm-2 col-form-label">Mô tả Tin Tức</label>
                <div class="col-sm-10">
                    @* <textarea asp-for="Desciption" rows="5" cols="5" class="form-control"
                              placeholder="Mô tả..."></textarea> *@
                    <textarea asp-for="Desciption" id="editor1" name="Desciption"></textarea>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-warning" />
                <a asp-action="Index" class="btn btn-inverse" asp-controller="AdminNews" asp-route-id="@Model?.NewsId">Quay Lại</a>
            </div>
        </form>

    </div>
</div>
<!-- Basic Form Inputs card end -->
<script>
    CKEDITOR.replace('editor1');
</script>
