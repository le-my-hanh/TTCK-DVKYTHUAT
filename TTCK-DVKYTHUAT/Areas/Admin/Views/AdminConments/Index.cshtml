@model IEnumerable<TTCK_DVKYTHUAT.Models.Conment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    table {
        table-layout: fixed;
        width: 120%;
        /*    border: 1px solid red; */
    }

    thead th:nth-child(1) {
        width: 5%;
    }

    thead th:nth-child(2) {
        width: 20%;
    }

    thead th:nth-child(3) {
        width: 20%;
    }

    thead th:nth-child(4) {
        width: 15%;
    }

    thead th:nth-child(5) {
        width: 10%;
    }

    thead th:nth-child(6) {
        width: 20%;
    }

   
    td {
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        padding: 10px;
    }
</style>

<!-- Bottom Breadcrumb card start -->
<div class="card">
    <div class="card-block">
        <div class="breadcrumb-header">
            <h5>Quản Lý Bình Luận</h5>
        </div>
        <div>
            <ul class="breadcrumb-title">
                <li class="breadcrumb-item">
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                        <i class="icofont icofont-home"></i>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-area="Admin" asp-controller="AdminConments" asp-action="Index">Danh Sách Bình Luận</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#!">.....</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- Bottom Breadcrumb card end -->


 <!-- Basic table card start -->
<div class="card">
    <div class="card-header">
      
        <div class="card-header-right">    <ul class="list-unstyled card-option">        <li><i class="icofont icofont-simple-left "></i></li>        <li><i class="icofont icofont-maximize full-card"></i></li>        <li><i class="icofont icofont-minus minimize-card"></i></li>        <li><i class="icofont icofont-refresh reload-card"></i></li>        <li><i class="icofont icofont-error close-card"></i></li>    </ul></div>
    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Khách hàng</th>
                        <th>Dịch vụ</th>
                        <th>Message</th>
                        <th>Rating</th>
                        <th>#</th>
                    
                    </tr>
                </thead>
                <tbody>
                   
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.ConmentId</th>
                                <td>@item.Customer.Name</td>
                                <td>@item.Service.Name</td>
                                <td>@item.Message</td>
                                <td>
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="ti-star @((i <= item.Rating) ? "text-warning" : "") me-2"></i>
                                    }
                                </td>
                                <td>
                                    @if (!(ViewData["Replies"] is Dictionary<int, List<Reply>> replies && replies.ContainsKey(item.ConmentId) && replies[item.ConmentId].Any()))
                                    {
                                        <i class="ti-pencil-alt" style="color: #aaa;" onclick="toggleReplySection('@item.ConmentId')"></i>
                                    }
                                </td>
                            </tr>

                            <tr id="replySection_@item.ConmentId" style="display: none;">
                                <td colspan="6">
                                    <!-- colspan="6" để đảm bảo cả cột "Details" ở phía sau cũng được chiếm hết -->
                                    @if (ViewData["Replies"] is Dictionary<int, List<Reply>> reply && reply.ContainsKey(item.ConmentId))
                                    {
                                        var rep = reply[item.ConmentId];

                                        foreach (var replyItem in rep)
                                        {
                                            <div class="card mt-2">
                                                <div class="card-body">
                                                    <div class="w-100">
                                                        <p>@replyItem.RepDate</p>
                                                        <p class="text-secondary mb-0">@replyItem.Reply1</p>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }

                                    <div class="reply-section mt-2">
                                        <form asp-area="Admin" asp-action="AddReply" asp-controller="AdminConments" method="post">
                                        
                                            <input type="hidden" name="reviewId" value="@item.ConmentId" />
                                            <textarea class="form-control mb-2" id="replyTextarea_@item.ConmentId" name="replyComment" rows="3"></textarea>
                                            <button type="submit" class="btn btn-primary">Trả lời</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Basic table card end -->

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function expandReplySection(commentId) {
        // Hiển thị phần mở rộng khi click vào nút pencil
        $("#replySection_" + commentId).show();
    }

    function postReply(commentId) {
        // Lấy nội dung từ textarea
        var replyContent = $("#replyTextarea_" + commentId).val();

        $("#replySection_" + commentId).hide();
    }

    function toggleReplySection(commentId) {
        // Check the current visibility status of the reply section
        var replySection = $("#replySection_" + commentId);

        if (replySection.is(":visible")) {
            // If visible, hide it
            replySection.hide();
        } else {
            // If hidden, show it
            replySection.show();
        }
    }
</script>
 