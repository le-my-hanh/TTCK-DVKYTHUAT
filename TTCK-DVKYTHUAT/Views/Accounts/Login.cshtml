@model TTCK_DVKYTHUAT.ModelsView.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!--====== Login Register Start ======-->

<section class="login-register-area pt-75 pb-80" style="margin-top: 100px">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="login-register-content">
                    <h4 class="title">Đăng Nhập Tài Khoản</h4>

                    <div class="login-register-form">
                        <form asp-action="Login">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="single-form">
                                <label>Email *</label>
                                <input asp-for="UserName" type="email">
                            </div>
                            <div class="single-form">
                                <label>Mật Khẩu *</label>
                                <input asp-for="Password" type="password">
                            </div>
                            <div class="single-form">
                                <button class="main-btn d-block">Đăng Nhập</button>
                            </div>
                            
                            <div class="single-form">
                                <label> Bạn Không Có Tài Khoản !</label>
                                <a asp-action="DangKyTaiKhoan" asp-controller="Accounts" class="main-btn main-btn-2 d-block">Đăng Ký </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!--====== Login Register Ends ======-->

