@model TTCK_DVKYTHUAT.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<!-- Bottom Breadcrumb card start -->
<div class="card">
    <div class="card-block">
        <div class="breadcrumb-header">
            <h5>Quản Lý Danh Mục</h5>
        </div>
        <div>
            <ul class="breadcrumb-title">
                <li class="breadcrumb-item">
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                        <i class="icofont icofont-home"></i>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-area="Admin" asp-controller="AdminCategories" asp-action="Index">Danh Sách Danh Mục</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-area="Admin" asp-controller="AdminCategories" asp-action="Create">Tạo Danh Mục !</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- Bottom Breadcrumb card end -->
<!-- Basic Form Inputs card start -->
<div class="card">
    <div class="card-header">
        <h5>Thêm Danh Mục</h5>
      
        <div class="card-header-right">
            <i class="icofont icofont-spinner-alt-5"></i>
        </div>

        <div class="card-header-right">
            <i class="icofont icofont-spinner-alt-5"></i>
        </div>

    </div>
    <div class="card-block">
       
        <form asp-controller="AdminCategories" asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label">Tên Danh Mục</label>
                <div class="col-sm-10">
                    <input asp-for="Name" type="text" class="form-control" placeholder="Name...">
                </div>
            </div>
           
          
           

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Hình Ảnh</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control-file" Name="file">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ShortDesc" class="col-sm-2 col-form-label">Mô Tả Ngắn</label>
                <div class="col-sm-10">
                    <textarea asp-for="ShortDesc" rows="5" cols="5" class="form-control"
                              placeholder="Text..."></textarea>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo" class="btn hor-grd btn-grd-primary " />
                <a asp-action="Index" class="btn btn-inverse" asp-controller="AdminCategories" asp-route-id="@Model?.CategoryId">Quay Lại</a>

            </div>
        </form>
       
    </div>
</div>
<!-- Basic Form Inputs card end -->

