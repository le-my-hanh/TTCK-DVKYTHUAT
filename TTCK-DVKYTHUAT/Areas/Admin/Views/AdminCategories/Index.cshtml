@model IEnumerable<TTCK_DVKYTHUAT.Models.Category>

@{
    ViewData["Title"] = "Quản Lý Danh Mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<style>
    table {
        table-layout: fixed;
        width: 100%;
     /*    border: 1px solid red; */
    }

    thead th:nth-child(1) {
        width: 5%;
    }

    thead th:nth-child(2) {
        width: 15%;
    }

    thead th:nth-child(3) {
       
        width: 15%;
    }

    thead th:nth-child(4) {
        width: 15%;
    }

    thead th:nth-child(5) {
        width: 20%;
    }

  
    th,
    td {
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        padding: 20px;
    }
  
</style>
<!-- Bottom Breadcrumb card start -->
<div class="card">
    <div class="card-block">
        <div class="breadcrumb-header">
            <h5>Quản Lý Danh Mục</h5>
        </div>
        <div>
            <ul class="breadcrumb-title">
                <li class="breadcrumb-item">
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                        <i class="icofont icofont-home"></i>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-area="Admin" asp-controller="AdminCategories" asp-action="Index">Danh Sách Danh Mục</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#!">.....</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- Bottom Breadcrumb card end -->
<!-- Basic table card start -->
<div class="card">
    <div class="card-header">
      @*   <h5>Quản Lý Danh Mục</h5> *@

        <a asp-area="Admin" asp-controller="AdminCategories" asp-action="Create">
            <button class="btn btn-grd-primary ">+ Thêm Danh Mục</button>
        </a>
       
       
     
        <div class="card-header-right">    <ul class="list-unstyled card-option">        <li><i class="icofont icofont-simple-left "></i></li>        <li><i class="icofont icofont-maximize full-card"></i></li>        <li><i class="icofont icofont-minus minimize-card"></i></li>        <li><i class="icofont icofont-refresh reload-card"></i></li>        <li><i class="icofont icofont-error close-card"></i></li>    </ul></div>
    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table" >
                <thead>
                    <tr >
                        <th >ID</th>
                        <th >Tên</th>
                        <th >Mô tả ngắn </th>
                        <th>Hình ảnh</th>
                        <th >#</th>
                    </tr>
                </thead>
                <tbody>
                    @if(Model != null)
                    {
                        foreach(var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.CategoryId</th>
                                <td>@item.Name</td>
                                <td>@item.ShortDesc</td>
                                <td>  <img src="~/images/@item.Image" style="width: 50px; height: 50px;" /></td>
                              @*   <td>@item.Type</td> *@
                                <td>
                                    <a asp-area="Admin" asp-controller="AdminCategories" asp-action="Edit" asp-route-id="@item.CategoryId">
                                        <button class="btn hor-grd btn-grd-success">Chỉnh sửa</button>
                                   </a>
                                    <a asp-area="Admin" asp-controller="AdminCategories" asp-action="Delete" asp-route-id="@item.CategoryId">
                                        <button class="btn hor-grd btn-grd-danger ">Xóa</button>
                                   </a>
                                   
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div> 
<!-- Basic table card end -->

