@model IEnumerable<TTCK_DVKYTHUAT.Models.Reply>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<!-- Bottom Breadcrumb card start -->
<div class="card">
    <div class="card-block">
        <div class="breadcrumb-header">
            <h5>Quản Lý Reply</h5>
        </div>
        <div>
            <ul class="breadcrumb-title">
                <li class="breadcrumb-item">
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                        <i class="icofont icofont-home"></i>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-area="Admin" asp-controller="AdminReplies" asp-action="Index">Danh Sách Reply</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#!">.....</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- Bottom Breadcrumb card end -->
<!-- Basic table card start -->
<div class="card">
    <div class="card-header">
        @* <h5>Basic table</h5>
        <span>use class <code>table</code> inside table element</span> *@
        <div class="card-header-right">    <ul class="list-unstyled card-option">        <li><i class="icofont icofont-simple-left "></i></li>        <li><i class="icofont icofont-maximize full-card"></i></li>        <li><i class="icofont icofont-minus minimize-card"></i></li>        <li><i class="icofont icofont-refresh reload-card"></i></li>        <li><i class="icofont icofont-error close-card"></i></li>    </ul></div>
    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên Khách Hàng</th>
                        <th>Bình Luận</th>
                        <th>Đánh Giá</th>
                        <th>Phản Hồi</th>
                        <th>Ngày Tạo</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                
                                <th scope="row">@item.ReplyId</th>
                                <th>@item.Conment.Customer.Name</th>
                                <td>@item.Conment.Message</td>
                                <th>
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="ti-star @((i <= item.Conment.Rating) ? "text-warning" : "") me-2"></i>
                                    }
                                </th>
                                <td>@item.Reply1</td>
                                <td>@item.RepDate</td>
                               

                                <td>

                                    <a asp-area="Admin" asp-controller="AdminReplies" asp-action="Edit" asp-route-id="@item.ReplyId">
                                        <button class="btn hor-grd btn-grd-success">Chỉnh Sửa</button>
                                    </a>
                                    <a asp-area="Admin" asp-controller="AdminReplies" asp-action="Delete" asp-route-id="@item.ReplyId">
                                        <button class="btn hor-grd btn-grd-danger ">Xóa</button>
                                    </a>
                                </td>

                            </tr>
                        }
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Basic table card end -->
