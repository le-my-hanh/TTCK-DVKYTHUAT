@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<TTCK_DVKYTHUAT.Models.News>
@*  @model IEnumerable<TTCK_DVKYTHUAT.Models.News>  *@
@* @model TTCK_DVKYTHUAT.Models.News *@
@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Index" + CurrentPage;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--====== Page Banner Start ======-->


<section class="slider-area slider-02 slider-active">
    <div class="single-slider bg_cover d-flex align-items-center paroller" style="background-image: url(images/banner8.jpg); width:800px;height:300px; " data-paroller-factor="-0.15" data-paroller-type="foreground" data-paroller-direction="vertical">
        <div class="container">
        </div>
    </div>

</section>

<!--====== Page Banner Ends ======-->
<!--====== Blog Start ======-->

<section class="blog-page site-bg pt-50 pb-100">
    <div class="container">
        <div class="row">
             @foreach(var item in Model)
            {
                <div class="col-lg-6">
                    <div class="single-blog blog-5 mt-50">
                        <div class="blog-image">
                            <a asp-action="Details" asp-controller="News" asp-route-Id="@item.NewsId">
                                <img src="~/images/@item.Image" alt="blog">
                                <i class="fal fa-search-plus"></i>
                            </a>
                        </div>
                        <div class="blog-content text-center">
                            <h4 class="title"><a asp-action="Details" asp-controller="News" asp-route-Id="@item.NewsId">@item.Title</a></h4>
                            <ul class="blog-meta">
                                <li><a href="#">By <span> Viettel Construction</span></a></li>
                                <li><a href="#"><i class="fal fa-clock"></i> @item.CreatedDate</a></li>
                               @*  <li><a href="#"> @item.Categorynew.Name </a></li> *@
                            </ul>

                            <a asp-action="Details" asp-controller="News" asp-route-Id="@item.NewsId" class="main-btn">Xem Thêm</a>
                        </div>
                    </div>
                </div>
            }
          
        </div>

        <div class="pagination-items mt-45">
            <ul class="pagination justify-content-center">
                <!-- Previous page link -->
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="prev" href="@Url.Action("Index", new { page = Model.PageNumber - 1 })">Previous</a>
                    </li>
                }

                <!-- Page links -->
                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                    </li>
                }

                <!-- Next page link -->
                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="Next" href="@Url.Action("Index", new { page = Model.PageNumber + 1 })">Next</a>
                    </li>
                }
                @*  <li><a class="prev" href="#">Previous</a></li>
                <pager class="pager-container" options="@PagedListRenderOptions.Bootstrap4PageNumbersOnly" list="@Model" asp-area="" asp-controller="Service" asp-action="Index"></pager>


                <li><a class="next" href="#">Next</a></li> *@
            </ul>
        </div>
    </div>
</section>

<!--====== Blog Ends ======-->
